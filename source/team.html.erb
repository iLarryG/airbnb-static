    <li>
      <h2><%= member.capitalize %></h2>
      <%= image_tag "#{member}.png", class: "img-circle avatar-larger" %> 
    </li>
    <% end %>
  </ul>
  <h3 class="padded">
  <% link_to "mailto:contact@airbnb.com", class: "padded" do %>
